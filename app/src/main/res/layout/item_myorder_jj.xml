<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_itemhometutor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_ordertime"
            android:layout_marginLeft="12dp"
            android:text="2017-02-09 09:00"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_marginLeft="12dp"
            android:text="进行中"
            android:textSize="20sp"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="8dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_item"
        android:layout_width="match_parent"
        android:background="#F8F8F8"
        android:layout_height="200dp">

        <com.ztd.yyb.view.XCRoundImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/list_icon_user" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/imageView">

            <TextView
                android:text="学生"
                android:textColor="#111111"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_studentname" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tv_class"
                    android:text="年级：初二"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tv_subjects"
                    android:text="科目：数学"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tv_sex"
                    android:layout_weight="1"
                    android:text="性别要求：女"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tv_education"
                    android:layout_weight="1"
                    android:text="学历要求：本科"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tv_classtime"
                    android:layout_weight="1"
                    android:text="上课时长：2小时"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tv_classdays"
                    android:layout_weight="1"
                    android:text="上课天数：10天"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:textColor="#999999"
                android:id="@+id/tv_home_tutor_starttime"
                android:text="开课时间：2017-08-10 08:00"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="地址："
                    android:textColor="#999999"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tv_home_tutor_address"
                    android:text="厦门市思明区万翔国际商务中心"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="65dp">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/color_66"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:textColor="@color/color_66"
                android:background="@drawable/bg_repair"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/text_16"
                />

            <TextView
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                />
            <TextView
                android:background="@drawable/bg_item_demand"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="施工完成"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_16"
                />

        </LinearLayout>



    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F8F8F8"
        />

</LinearLayout>