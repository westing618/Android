<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/lin_top"
        layout="@layout/lay_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <TextView
                android:id="@+id/tv_wbankname"
                android:text="建设银行储蓄卡(2955)"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#185477"
                />

            <TextView
                android:text="银行卡"
                android:textColor="@color/color_11"
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                />
        </RelativeLayout>



    </RelativeLayout>

    <LinearLayout

        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:text="提现金额"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_11"
            android:layout_marginLeft="12dp"
            />
        <EditText
            android:id="@+id/etv_mtotality"
            android:maxLines="1"
            android:background="@null"
            android:hint="请输入提现金额"
            android:textColor="@color/color_66"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="18dp"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/color_bf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            />
        <TextView
            android:id="@+id/tv_totality"
            android:layout_marginTop="8dp"

            android:textColor="@color/color_99"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="35dp">


            <TextView
                android:id="@+id/tv_mytotality"

                android:textSize="16sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_tixian"
                android:text="全部提现"
                android:textSize="16sp"
                android:textColor="#185477"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_withdraw"
        android:textSize="16sp"
        android:text="提现"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_demand"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        />


    <TextView
        android:layout_marginTop="8dp"
        android:text="提现规则"
        android:textColor="@color/color_99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:layout_marginTop="8dp"
        android:text="1:提现金额低于（包含）1000元,每笔扣除2元手续费"
        android:textColor="@color/color_99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:layout_marginTop="8dp"
        android:text="2:提现金额大于1000元,每笔扣除1%手续费"
        android:textColor="@color/color_99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        />


</LinearLayout>