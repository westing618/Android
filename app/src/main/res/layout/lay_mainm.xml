<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ztd.yyb.view.MyQViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/color_e7" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_hr_main_my"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hr_main_my"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/tab_btn_index_sel" />

            <TextView
                android:id="@+id/tv_hr_main_my"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/color_reb"
                android:textSize="@dimen/text_14" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_hr_main_communication"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hr_main_application"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/tab_btn_demand_nor" />

            <TextView
                android:id="@+id/tv_hr_main_application"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="需求"
                android:textSize="@dimen/text_14"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <LinearLayout
                android:id="@+id/ll_hr_main_message"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_hr_main_message"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/tab_btn_msg_nor" />

                <TextView
                    android:id="@+id/tv_hr_main_message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="消息"
                    android:textSize="@dimen/text_14"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tipcnt"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/unread_count_shape"
                android:gravity="center"
                android:text=""
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <LinearLayout
                android:id="@+id/ll_hr_main_application"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_hr_main_communication"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/tab_btn_index_my" />

                <TextView
                    android:id="@+id/tv_hr_main_communication"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="我的"
                    android:textSize="@dimen/text_14"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tipcnt2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/unread_count_shape"
                android:gravity="center"
                android:text=""
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </RelativeLayout>
