<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/re_mycoupon"
        android:layout_marginLeft="@dimen/panding_6"
        android:layout_marginRight="@dimen/panding_6"
        android:layout_marginTop="@dimen/panding_10"

        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >


            <LinearLayout
                android:layout_weight="1.6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/color_white"
                    android:padding="1dp"
                    android:textSize="@dimen/text_25"
                    android:gravity="center"
                    android:text="新用户专用券"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_coutitle"
                    android:layout_weight="1"
                    />
                <TextView
                    android:padding="@dimen/panding_10"
                    android:textSize="@dimen/text_18"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <TextView

                    android:id="@+id/tv_mycoupon"

                    android:textColor="@color/color_white"
                    android:padding="1dp"
                    android:textSize="@dimen/text_25"
                    android:gravity="center"
                    android:text="￥50"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@mipmap/icon_time"
                    android:padding="@dimen/panding_6"
                    android:textSize="@dimen/text_14"
                    android:gravity="center"
                    android:text="使用截止日期：2017-08-21-08-24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_endtime"
                    />
                <TextView
                    android:id="@+id/tv_state"
                    android:padding="@dimen/panding_6"
                    android:textSize="@dimen/text_14"
                   android:gravity="center_horizontal"
                    android:text="可用"
                    android:textColor="@color/color_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginRight="15dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>