<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/lin_top"
        layout="@layout/lay_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_above="@+id/relativeLayout">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_pare_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView

                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:layout_weight="1"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_pare_address"
                    android:textColorHint="@color/color_99"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:hint="点击选择省市区"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/list_btn_right"
                    />

            </LinearLayout>
            <include layout="@layout/lay_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"

                android:orientation="horizontal">

                <!--<ImageView-->
                  <!--android:layout_marginLeft="15dp"-->
                    <!--android:layout_marginRight="15dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@mipmap/list_icon_gps"-->
                    <!--android:id="@+id/imageView2" />-->
                <TextView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请点击定位"
                    android:textSize="@dimen/text_16"
                    android:padding="15dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/list_icon_gps"
                    />

                <EditText
                    android:id="@+id/edit_address_detail"
                    android:textColorHint="@color/color_99"
                    android:gravity="right"
                    android:maxLines="2"
                    android:background="@null"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:hint="请输入详细地址"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2" />


            </RelativeLayout>
            <include layout="@layout/lay_line"/>
            <LinearLayout
                android:id="@+id/lin_parentclass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="孩子年级"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_pare_class"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:text="请选择孩子年级"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    />

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/list_btn_right"
                    />
            </LinearLayout>

            <include layout="@layout/lay_line"/>
            <LinearLayout
                android:id="@+id/ll_pare_subject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="孩子需求科目"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_pare_sub"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:text="请选择孩子的需求科目"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    />

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/list_btn_right"
                    />
            </LinearLayout>
            <include layout="@layout/lay_line"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/lin_parentsex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别要求"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16"
                        />

                    <TextView
                        android:id="@+id/tv_paresex"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16"
                        android:text="请选择性别要求"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/list_btn_right"
                        />
                </LinearLayout>
                <include layout="@layout/lay_line"/>

                <LinearLayout
                    android:id="@+id/lin_parentschool"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="老师学历要求"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/tv_parentschool"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16"
                        android:text="请选择老师学历要求"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/list_btn_right"
                        />
                </LinearLayout>
                <include layout="@layout/lay_line"/>

                <LinearLayout
                    android:id="@+id/lin_parenttime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开课时间"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/tv_conmetime"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/text_16"
                        android:text="请选择开课时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/list_btn_right" />
                </LinearLayout>
                <include layout="@layout/lay_line"/>
                <LinearLayout
                    android:id="@+id/ll_shichang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上课时长"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/text_16"
                        android:id="@+id/textView" />

                    <TextView
                        android:id="@+id/tv_shichang"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/text_16"
                        android:text="请选择上课时长"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        />

                    <ImageView

                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/list_btn_right" />
                </LinearLayout>
                <include layout="@layout/lay_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上课天数"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16" />

                    <EditText
                        android:id="@+id/pare_et"
                        android:textColorHint="@color/color_99"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:background="@null"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16"
                        android:hint="请输入上课天数"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      />
                </LinearLayout>



                <include layout="@layout/lay_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16" />

                    <EditText
                        android:id="@+id/pare_etname"
                        android:textColorHint="@color/color_99"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:maxLines="1"
                        android:background="@null"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16"
                        android:hint="请输入联系人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <include layout="@layout/lay_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16" />

                    <EditText
                        android:id="@+id/edit_phone"
                        android:textColorHint="@color/color_99"
                        android:gravity="right"
                        android:maxLines="1"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textColor="@color/color_11"
                        android:textSize="@dimen/text_16"
                        android:hint="请输入手机号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <include layout="@layout/lay_line"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F2F2F2"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hr_vacate_apply_cx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需求说明"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="60dp"
                    >

                    <EditText
                        android:id="@+id/edit_content"
                        android:layout_width="match_parent"
                        android:gravity="top"
                        android:layout_marginRight="10dp"
                        android:paddingTop="5dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:ems="10"
                        android:maxLength="140"
                        android:background="@null"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp"
                        android:hint="请输入您的具体需求，字数在140字内."
                        />

                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">
        <Button
            android:id="@+id/btn_Labor_rob_order"
            android:textSize="18sp"
            android:text="发布需求"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_selector"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            />
    </RelativeLayout>
</RelativeLayout>