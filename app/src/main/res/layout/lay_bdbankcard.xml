<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <include
        android:id="@+id/lin_top"
        layout="@layout/lay_top" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin_top"
        android:layout_above="@+id/relativeLayout">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F2F2F2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户银行"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16" />

                <EditText
                    android:id="@+id/et_bank"
                    android:textColorHint="@color/color_99"
                    android:gravity="right"
                    android:maxLines="1"
                    android:background="@null"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:hint="请输入银行名称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>


            <include layout="@layout/lay_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户银行所在地"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16" />

                <EditText
                    android:id="@+id/et_bankname"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@color/color_99"
                    android:gravity="right"
                    android:maxLines="1"
                    android:background="@null"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:hint="请输入开户银行所在地"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F2F2F2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持卡人姓名"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@color/color_99"
                    android:gravity="right"
                    android:maxLines="1"
                    android:background="@null"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:hint="请输入持卡人姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <include layout="@layout/lay_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡号"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16" />

                <EditText
                    android:id="@+id/tv_kanum"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@color/color_99"
                    android:gravity="right"
                    android:maxLines="1"
                    android:maxLength="19"
                    android:inputType="number"
                    android:background="@null"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:hint="请输入银行卡卡号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <include layout="@layout/lay_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16" />

                <EditText
                    android:id="@+id/tv_kaphone"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@color/color_99"
                    android:gravity="right"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:background="@null"
                    android:textColor="@color/color_11"
                    android:textSize="@dimen/text_16"
                    android:hint="请输入银行预留手机号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <include layout="@layout/lay_line"/>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">
        <Button
            android:id="@+id/btn_bank"
            android:textSize="18sp"
            android:text="确认提交"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_demand"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            />
    </RelativeLayout>

</RelativeLayout>