<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/lin_top"
        layout="@layout/lay_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/panding_10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/panding_10"
        android:paddingRight="@dimen/panding_10">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/panding_20"
            android:layout_marginBottom="@dimen/panding_10"
            android:src="@mipmap/logo"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/panding_50"
    android:text="用工贝"
    android:textSize="@dimen/text_20"
    android:textColor="@color/themecolor"
    android:layout_gravity="center"
    />


        <LinearLayout
            android:background="@drawable/login_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/panding_5"
            android:layout_marginTop="@dimen/panding_5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/panding_10"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_icon_user" />

            <EditText
                android:id="@+id/edt_phone_regin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:paddingBottom="@dimen/panding_15"
                android:paddingLeft="@dimen/panding_10"
                android:paddingRight="@dimen/panding_5"
                android:paddingTop="@dimen/panding_15"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/color_99"
                android:textSize="@dimen/text_14"
                android:hint="输入手机号" />

            <ImageButton
                android:id="@+id/imgbt_clear_login_phone"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="center"
                android:src="@mipmap/img_delete"
                android:visibility="gone"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/panding_5"
            android:layout_marginTop="@dimen/panding_5"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/login_bold"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="@dimen/panding_10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_icon_password" />

                <EditText
                    android:id="@+id/edt_yanz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:paddingBottom="@dimen/panding_15"
                    android:paddingLeft="@dimen/panding_10"
                    android:paddingRight="@dimen/panding_5"
                    android:paddingTop="@dimen/panding_15"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/text_14"
                    android:hint="输入验证码" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_yanz"
                android:layout_marginLeft="@dimen/panding_15"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/panding_20"
                android:paddingRight="@dimen/panding_20"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item_demand"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />


        </LinearLayout>

<LinearLayout
    android:id="@+id/ll_myagreed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/panding_10"
    android:orientation="horizontal">

<ImageView
    android:id="@+id/image_agreed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/panding_5"
    android:background="@mipmap/login_btn_check_sel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_99"
        android:textSize="@dimen/text_14"
        android:text="我已阅读并同意"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_reb"
        android:textSize="@dimen/text_14"
        android:text="使用协议"/>
</LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/panding_10"
        android:layout_marginRight="@dimen/panding_10"
        android:layout_marginTop="@dimen/panding_50"
        android:background="@drawable/loginbnt_bold"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />


</LinearLayout>
