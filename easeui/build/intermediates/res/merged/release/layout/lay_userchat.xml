<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ff0000"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/nav_btn_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ll_yname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_yname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="师傅"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/nav_btn_dropdown" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/list_icon_user" />


        <TextView

            android:id="@+id/tv_userphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingTop="12dp"
            android:textColor="@color/bottom_bar_normal_bg"
            android:text=""
            android:textSize="18sp"

            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#777777" />

    <TextView
        android:id="@+id/tv_username"
        android:background="#ffffff"
        android:text="姓名: "
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_usersex"
        android:background="#ffffff"
        android:text="性别: "
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_userjob"
        android:background="#ffffff"
        android:text="职业: "
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_userjobtime"
        android:background="#ffffff"
        android:text="工龄: "
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_useraddress"
        android:background="#ffffff"
        android:text="地址: "
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#777777" />

    <TextView
        android:id="@+id/tv_userjobstat"
        android:background="#ffffff"
        android:text="平均星级评(分): "
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_userjonum"
        android:background="#ffffff"
        android:text="成交量(单): "
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>